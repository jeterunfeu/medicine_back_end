<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="net.softsociety.mra.dao.ReviewDAO">

	<select id="selectAll" resultType="Review">
		select * from review order by reviewnum desc
	</select>
	
	<select id="selectOne" parameterType="int" resultType="Review">
		select * from review where reviewnum = #{reviewnum}
	</select>
	
	<insert id="insertReview" parameterType="Review">
		insert into Review
			reviewnum
			, contents
			, evaluate
		values (
			review_seq.nextval
			, contents
			, evaluate
		)
	</insert>
	
	<update id="updateReview" parameterType="int">
		update review set
			reviewnum
			, contents
			, evaluate
		where
			reviewnum = #{reviewnum} 
	</update>
	
	<delete id="deleteReview" parameterType="int">
		delete 
			from review
		where
			reviewnum = #{reviewnum}
	</delete>

</mapper>